    <Label layoutX="95.0" layoutY="263.0" prefHeight="38.0" prefWidth="279.0" text="- 1 large onion, finely chopped">
        <font>
            <Font size="15.0" />
        </font>
    </Label>
    <Label layoutX="95.0" layoutY="299.0" prefHeight="62.0" prefWidth="279.0" text="- 1 green bell pepper (capsicum), finely chopped" wrapText="true">
